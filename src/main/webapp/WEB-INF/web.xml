<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>servletAndJsp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Servlet1_1 Declaration -->
	<servlet>
		<servlet-name>first servlet program</servlet-name>
		<servlet-class>com.example.servlets.Servlet1_1_CreatingServletUsingServletInterface</servlet-class>
	</servlet>
	
	<!-- Servlet1_1 Mapping  -->
	<servlet-mapping>
		<servlet-name>first servlet program</servlet-name>
		<url-pattern>/web1</url-pattern>
	</servlet-mapping>
	
	<!-- Servlet1_2 Declaration -->
	<servlet>
		<servlet-name>servlet using generic class</servlet-name>
		<servlet-class>com.example.servlets.Servlet1_2_CreatingServletUsingGenericServletClass</servlet-class>
	</servlet>
	
	<!-- Servlet1_2 Mapping -->
	<servlet-mapping>
		<servlet-name>servlet using generic class</servlet-name>
		<url-pattern>/web2</url-pattern>
	</servlet-mapping>
	
</web-app>
